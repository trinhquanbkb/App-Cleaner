<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoolerCPU.CoolerCPU"
    android:background="#0E558E"
    android:orientation="vertical"
    android:gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="32dp"
                    android:onClick="clickTwirl"
                    android:src="@drawable/cpu_img_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView27"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:onClick="clickTwirl"
                    android:src="@drawable/cpu_img_2"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.201" />
                <ImageView
                    android:id="@+id/imageView28"
                    android:layout_width="223dp"
                    android:layout_height="223dp"
                    android:onClick="clickTwirl"
                    android:src="@drawable/cpu_img_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.201" />
                <ImageView
                    android:id="@+id/imageView29"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:onClick="clickTwirl"
                    android:src="@drawable/cpu_img_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.201" />
                <ImageView
                    android:id="@+id/imageView30"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:onClick="clickTwirl"
                    android:src="@drawable/cpu_img_5"
                    android:layout_marginTop="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.201" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18dp"
                android:layout_marginTop="150dp"
                android:textColor="@color/cardview_light_background"
                android:text="Làm mát liên tục ..."/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>